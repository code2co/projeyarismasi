<div class="main_page_container">
  <%= render :partial => "refills/admission_tabs" %>
  <%= simple_form_for @admission, url: admission_build_path, method: :put do |f|  %>
    <%= f.input :genuine_idea__research, label: "Projede özgün ve yenilikçilik adına yapılan araştırmalar", input_html: { rows: 5 } %>
    <%= f.input :genuine_idea__proof, label: "Proje fikrinin dayandığı özgünlük gerekçeleri, dayanaklar", input_html: { rows: 5 } %>
    <%= f.input :genuine_idea__processes, label: "Özgün ve yenilikçi fikrin, uygulanabilirlik analizi ve izlenen süreçler", input_html: { rows: 5 } %>
    <%= f.button :submit, 'Sonraki Adıma Geç' %>
    <%= link_to "veya önceki adıma geri dön", admission_build_path(@previous_step, admission_id: @admission.id) %>
  <% end %>
</div>
