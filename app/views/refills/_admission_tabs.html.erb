<ul class="accordion-tabs-minimal">
  <% wizard_steps.each do |s| %>
    <li class="tab-header-and-content">
      <% if s == step %>
        <%= link_to I18n.t("wicked.#{s}"), admission_build_path(s, admission_id: @admission.id), class: "tab-link is-active" %>
      <% else %>
        <%= link_to I18n.t("wicked.#{s}"), admission_build_path(s, admission_id: @admission.id), class: "tab-link" %>
      <% end %>
    </li>
  <% end %>
</ul>
